{
    "shadowCasting": "false",
    "translucent" : true,
    "rotation": "Rails:rails",
    "penetrable" : false,

    "entity": {
        "prefab": "Rails:Rails"
    },

    "no_connections": {
        "shape": "engine:horizontalOffsetPlane",
        "tiles" : {
           "sides" : "Rails:TrainTrackEmpty",
           "top" : "Rails:TrainTrack",
           "bottom" : "Rails:TrainTrackEmpty"
        }
    },
    "one_connection": {
        "tile" : "Rails:TrainTrack",
        "shape" : "engine:horizontalOffsetPlane",
        "tiles" : {
          "sides" : "Rails:TrainTrackEmpty",
          "top" : "Rails:TrainTrack",
          "bottom" : "Rails:TrainTrackEmpty"
        }
    },
    "line_connection": {
        "tile" : "Rails:TrainTrack",
        "shape" : "engine:horizontalOffsetPlane",
        "tiles" : {
          "sides" : "Rails:TrainTrackEmpty",
          "top" : "Rails:TrainTrack",
          "bottom" : "Rails:TrainTrackEmpty"
        }
    },
    "2d_corner": {
        "tile" : "Rails:TrainTrackCurve",
        "shape" : "engine:horizontalOffsetPlane",
        "tiles" : {
          "sides" : "Rails:TrainTrackEmpty",
          "top" : "Rails:TrainTrackCurve",
          "bottom" : "Rails:TrainTrackEmpty"
        }
    },
    "2d_t": {
        "tile" : "Rails:TrainTrack",
        "shape" : "engine:horizontalOffsetPlane",
        "tiles" : {
          "sides" : "Rails:TrainTrackEmpty",
          "top" : "Rails:TrainTrackTee",
          "bottom" : "Rails:TrainTrackEmpty"
        }
    },
    "cross": {
        "tile" : "Rails:TrainTrackIntersection",
        "shape" : "engine:horizontalOffsetPlane",
        "tiles" : {
          "sides" : "Rails:TrainTrackEmpty",
          "top" : "Rails:TrainTrackIntersection",
          "center" : "Rails:TrainTrackIntersection",
          "bottom" : "Rails:TrainTrackEmpty"
        }
    },

    "slope_connection": {
        "tile"  : "Rails:TrainTrackSlope",
        "shape" : "engine:slope",
        "tiles" : {
          "sides" : "Rails:TrainTrackEmpty",
          "top" : "Rails:TrainTrackSlope",
          "bottom" : "Rails:TrainTrackEmpty"
        }
    }
}
